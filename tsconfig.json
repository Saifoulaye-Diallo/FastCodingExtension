{
	"compilerOptions": {
	  "module": "Node16",                       
	  "moduleResolution": "Node16",              
	  "target": "ES2022",                       
	  "lib": ["ES2022"],
	  "resolveJsonModule": true,
	  "esModuleInterop": true,
	  "sourceMap": true,
	  "outDir": "out",
	  "rootDir": "src",
	  "baseUrl": "./src",                      
	  "paths": {
		"*": ["*", "providers/*", "commands/*", "ai/*", "utils/*"]
	  },
	  "strict": true,
	  "noImplicitReturns": true,
	  "noFallthroughCasesInSwitch": true,
	  "noUnusedParameters": true
	},
	"include": ["src/**/*"]
  }
  