{
  "name": "fast-coding",
  "displayName": "Fast Coding",
  "description": "Fast Coding est un plugiciel pour VSCode qui int√®gre des mod√®les de langage avanc√©s (GPT-4, Codex, StarCoder, CodeLlama) afin d‚Äôassister les d√©veloppeurs dans la g√©n√©ration de code, la revue et l‚Äôoptimisation du code, ainsi que la documentation automatique.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Fast Coding",
      "properties": {
        "Fast_Coding.model": {
          "type": "string",
          "enum": [
            "GPT-4",
            "StarCoder",
            "CodeLlama"
          ],
          "default": "GPT-4",
          "description": "Mod√®le LLM utilis√© pour g√©n√©rer les suggestions de code."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fastCoding",
          "title": "Fast Coding",
          "icon": "./resources/icon.png"
        }
      ]
    },
    "views": {
      "fastCoding": [
        {
          "id": "fastCoding",
          "name": "Fast Coding",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "fastCoding.generateCode",
        "title": "G√©n√©rer du Code - Fast Coding"
      },
      {
        "command": "fastCoding.testHF",
        "title": "üß™ Tester Hugging Face CodeLlama"
      },
      {
        "command": "fastCoding.reviewCode",
        "title": "Revue de code - Fast Coding"
      },
      {
        "command": "fastCoding.generateDocumentation",
        "title": "G√©n√©rer la documentation - Fast Coding"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "fastCoding.reviewCode",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "fastCoding.generateDocumentation",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "marked": "^15.0.7",
    "node-fetch": "^3.3.2",
    "openai": "^4.87.4"
  }
}
